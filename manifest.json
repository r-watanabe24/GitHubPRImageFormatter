{
  "manifest_version": 3,
  "name": "GitHub PR Image Formatter",
  "version": "1.0",
  "description": "Format images in GitHub PRs to a professional table layout within %% blocks.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
